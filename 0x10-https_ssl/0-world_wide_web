#!/usr/bin/env bash
# This script  will display information about subdomaim
#!/bin/bash

display_info() {
    local sub_domain="$1"
    local domain="$2"

    record_type=$(dig "$sub_domain.$domain" | awk '/ANSWER SECTION/ {getline; print $4}')
    destination=$(dig "$sub_domain.$domain" | awk '/ANSWER SECTION/ {getline; print $5}')

    echo "The subdomain [$sub_domain] is a [$record_type] record and points to [$destination]"
}
if [ -z "$2" ]; then
    for sub_domain in "www" "lb-01" "web-01" "web-02"; do
        display_info "$sub_domain" "$1"
    done
else
    display_info "$2" "$1"
fi
