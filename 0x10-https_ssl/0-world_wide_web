#!/usr/bin/env bash
# This script  will display information about subdomaim
#!/bin/bash

function display_info() {
    local sub_domain="$1"
    local record_type="$(dig +short $sub_domain)"
    local destination="$(dig +short $sub_domain)"

    echo "The subdomain [$sub_domain] is a [$record_type] record and points to [$destination]"
}

if [ -z "$2" ]; then
    for sub_domain in "www" "lb-01" "web-01" "web-02"; do
        display_info "$sub_domain.$1"
    done
else
    display_info "$2.$1"
fi
