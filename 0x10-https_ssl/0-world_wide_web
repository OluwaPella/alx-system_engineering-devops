#!/usr/bin/env bash
# this script  display information about subdomains and domains
domain_info() {
    local domain="$1"
    local subdomain="$2"
    local subdomains=()

    if [ $# -eq 1 ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for subdomain in "${subdomains[@]}"; do
        record_type=$(dig +short -t ANY "$subdomain.$domain" | awk 'NR==1 {print $4}')
        destination=$(dig +short "$subdomain.$domain" | awk 'NR==1')
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    done
}

# Check for the required number of arguments
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# Get domain and subdomain from arguments
domain="$1"
subdomain="$2"

# Call the function to get subdomain information
domain_info "$domain" "$subdomain"

